    }

    .total {
      display: flex;
      justify-content: space-between;
      font-size: 18px;
      font-weight: bold;
      color: #c2954f;
      margin-top: 15px;
    }

    .note {
      margin-top: 20px;
      font-size: 15px;
      color: #555;
    }

    .footer {
      margin-top: 35px;
      text-align: center;
      font-size: 13px;
      color: #888;
    }

    .brand {
      color: #c2954f;
      font-weight: bold;
    }
  </style>
</head>
